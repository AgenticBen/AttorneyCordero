        const phrasesContainer = document.getElementById('persuasivePhrasesContainer');
        const toastMessage = document.getElementById('toast-message');

        persuasivePhrases.forEach(item => {
            const card = document.createElement('div');
            card.className = 'phrase-card p-4 rounded-md shadow mb-3';
            card.innerHTML = `
                <p class="italic text-neutral-700">"${item.phrase}"</p>
                <p class="text-xs text-sky-700 mt-1"><strong>Rationale:</strong> ${item.rationale}</p>
                <button class="copy-phrase-btn mt-2 px-3 py-1 bg-sky-600 text-white text-xs rounded-md hover:bg-sky-700 transition-colors">Copy Phrase</button>
            `;
            phrasesContainer.appendChild(card);

            card.querySelector('.copy-phrase-btn').addEventListener('click', () => {
                const textToCopy = item.phrase;
                
                const textarea = document.createElement('textarea');
                textarea.value = textToCopy;
                document.body.appendChild(textarea);
                textarea.select();
                try {
                    document.execCommand('copy');
                    toastMessage.classList.add('show');
                    setTimeout(() => {
                        toastMessage.classList.remove('show');
                    }, 2000);
                } catch (err) {
                    console.error('Failed to copy text: ', err);
                    alert('Failed to copy text. Please copy manually.');
                }
                document.body.removeChild(textarea);
            });
        });
        
