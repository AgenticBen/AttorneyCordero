    <script>
        const tabs = document.querySelectorAll('.tab-button');
        const tabContents = document.querySelectorAll('.tab-content');

        tabs.forEach(tab => {
            tab.addEventListener('click', () => {
                tabs.forEach(item => item.classList.remove('active'));
                tab.classList.add('active');

                const targetTab = tab.getAttribute('data-tab');
                tabContents.forEach(content => {
                    content.classList.remove('active');
                    if (content.id === targetTab) {
                        content.classList.add('active');
                    }
                });
            });
        });

        const expandableTriggers = document.querySelectorAll('.expandable-trigger');
        expandableTriggers.forEach(trigger => {
            trigger.addEventListener('click', () => {
                const content = trigger.nextElementSibling;
                content.classList.toggle('open');
                if (content.classList.contains('open')) {
                    trigger.textContent = trigger.textContent.replace('➕', '➖');
                } else {
                    trigger.textContent = trigger.textContent.replace('➖', '➕');
                }
            });
        });
        
        const practiceAreaData = {
            labels: ['Consumer Bankruptcy (60%)', 'Real Estate Law (20%)', 'Family Law (20%)'],
            datasets: [{
                label: 'Practice Area Breakdown',
                data: [60, 20, 20],
                backgroundColor: [
                    'rgba(2, 132, 199, 0.7)', // sky-600
                    'rgba(14, 165, 233, 0.7)', // sky-500
                    'rgba(56, 189, 248, 0.7)'  // sky-400
                ],
                borderColor: [
                    'rgba(2, 132, 199, 1)',
                    'rgba(14, 165, 233, 1)',
                    'rgba(56, 189, 248, 1)'
                ],
                borderWidth: 1
            }]
        };

        const practiceAreaConfig = {
            type: 'pie',
            data: practiceAreaData,
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'top',
                        labels: {
                            font: {
                                size: 12 
                            },
                            padding: 10,
                            // Custom label generation to wrap text if needed
                            generateLabels: function(chart) {
                                const data = chart.data;
                                if (data.labels.length && data.datasets.length) {
                                    return data.labels.map(function(label, i) {
                                        const meta = chart.getDatasetMeta(0);
                                        const style = meta.controller.getStyle(i);
                                        // Basic wrapping logic (example, might need refinement)
                                        const words = label.split(' ');
                                        let newLabel = '';
                                        let line = '';
                                        words.forEach(function(word, idx) {
                                            if ((line + word).length > 16 && line.length > 0) { // 16-char limit
                                                newLabel += line.trim() + '\n';
                                                line = '';
                                            }
                                            line += word + ' ';
                                            if (idx === words.length -1) {
                                                newLabel += line.trim();
                                            }
                                        });

                                        return {
                                            text: newLabel, // Use potentially wrapped label
                                            fillStyle: style.backgroundColor,
                                            strokeStyle: style.borderColor,
                                            lineWidth: style.borderWidth,
                                            hidden: isNaN(data.datasets[0].data[i]) || meta.data[i].hidden,
                                            index: i
                                        };
                                    });
                                }
                                return [];
                            }
                        }
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                let label = context.label || '';
                                if (label) {
                                    label += ': ';
                                }
                                if (context.parsed !== null) {
                                    label += context.parsed + '%';
                                }
                                return label;
                            }
                        }
                    }
                }
            }
        };
        
